<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/selector_categoria"
        android:layout_width="282dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <ListView
        android:id="@+id/lista_noticias"
        android:layout_width="290dp"
        android:layout_height="516dp"
        android:layout_marginTop="36dp"
        app:layout_constraintEnd_toEndOf="@+id/selector_categoria"
        app:layout_constraintStart_toStartOf="@+id/selector_categoria"
        app:layout_constraintTop_toBottomOf="@+id/selector_categoria" />
</androidx.constraintlayout.widget.ConstraintLayout>